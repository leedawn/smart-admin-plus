{
  "compileOnSave": true,
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "experimentalDecorators": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "target": "ES2015",
    "lib": ["DOM", "ESNext"],
    "skipLibCheck": true
  },
  "include": ["src/**/*", "test/**/*", "dom/simple-web-worker/cross-origin"]
}
