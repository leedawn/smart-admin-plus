{
  "compileOnSave": true,
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "target": "ES5",
    "lib": ["DOM", "ESNext"],
    "downlevelIteration": true
  },
  "include": ["src/**/*", "test/**/*"]
}
